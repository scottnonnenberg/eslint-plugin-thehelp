{
  "name": "eslint-plugin-thehelp",
  "version": "0.1.0",
  "description": "A set of rules for me!",
  "main": "src/index.js",

  "devDependencies": {
    "eslint": "2.7.0",
    "istanbul": "0.4.2",
    "mocha": "2.3.4"
  },

  "scripts": {
    "clean": "rm -rf coverage/*",

    "pre-commit": "npm run lint && npm run test-all",
    "lint": "time eslint .",

    "test": "NODE_ENV=test time mocha --recursive",
    "test-watch": "npm run test -- --watch",
    "test-coverage": "NODE_ENV=test time istanbul cover _mocha -- --recursive",

    "test-all": "npm run test -- -s 15 test/unit",
    "test-all-watch": "npm run test-watch -- -s 15 test/unit",
    "test-all-coverage": "npm run test-coverage -- test/unit",

    "open-coverage": "open coverage/lcov-report/index.html"
  },

  "author": "Scott Nonnenberg",
  "license": "all rights reserved"
}
